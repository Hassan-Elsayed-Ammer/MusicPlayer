<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Card">

    <LinearLayout
        style="@style/CardLayout"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_song_thumbnail"
            android:layout_width="@dimen/view_size_large"
            android:layout_height="@dimen/view_size_large"
            android:layout_margin="@dimen/spacing_tiny"
            fresco:actualImageScaleType="centerInside"
            fresco:placeholderImage="@drawable/ic_launcher_foreground"
            tools:background="@color/grey"
            tools:foreground="@drawable/ic_launcher_foreground" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_tiny"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_song_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/font_large"
                tools:text="A title" />

            <TextView
                android:id="@+id/item_song_genre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/font_normal"
                tools:text="A genre" />

            <TextView
                android:id="@+id/item_song_track_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/font_small"
                tools:text="A track duration" />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
